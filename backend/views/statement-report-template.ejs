<!DOCTYPE html>
<html>
<head>

    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
          integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    <style>
        .table {
            width: 100%;
            max-width: 100%;
            margin-bottom: 1rem;
            background-color: transparent
        }

        .table td, .table th {
            padding: .75rem;
        
            border-top: 1px solid #dee2e6;
            font-size: 12px;
            text-align: center;
        }
        .table thead th {
        
            border-bottom: 2px solid #dee2e6;
            font-size: 11px;

        }

        .table tbody + tbody {
            border-top: 2px solid #dee2e6
        }


        .table-active, .table-active > td, .table-active > th {
            background-color: rgba(0, 0, 0, .075)
        }

        .table-hover .table-active:hover {
            background-color: rgba(0, 0, 0, .075)
        }

        .table-hover .table-active:hover > td, .table-hover .table-active:hover > th {
            background-color: rgba(0, 0, 0, .075)
        }

      
     

        .prfile_name {
            font-size: 16px;
            font-weight: bold;
            margin-left: 5px;
        }
    </style>

    <style>
        .header {
            padding-top: 30px;
            position: relative;
            margin-bottom: 20px;
        }

        .header .heading {
            text-align: center;
            font-family: "Arial Black";
            padding-left: 50px;
        }

        .header .heading .title {
            font-size: 35px;
            text-transform: uppercase;
            color: #17abe2;
            margin-bottom: 0px;
        }

        .header .heading .date {
            margin-top: 0;
            color: black;
            font-size: 14px;
            font-weight: 900;
        }

        tr {
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }

        .header .logo {
            position: absolute;
            width: 150px;
            height: auto;
            top: 75px;
            left: 20px;
        }

        h4 {
            color: black;
            text-align: center;
        }

        .card- {
            border-radius: 30px;
            box-shadow: 0 0 4px lightgray;
            padding: 20px;
            margin-top: 20px;
            margin-bottom: 60px;
        }

        .card-table {
            border-radius: 30px;
            box-shadow: 0 0 4px lightgray;
            padding: 20px;
            padding-bottom: 5px;
            margin-top: 20px;
        }

        .card-table h2 {
            font-size: 30px;
            font-weight: 700;
        }

        .container h3 {
            font-size: medium;
        }

        .icon {
            color: #349dff;
        }

      

        thead th {
            background: none;
            white-space: nowrap;
        }
        .table {
            border-collapse: separate;
            border-spacing: 0 10px;
        }

        .table td {
            background-color: rgb(247, 245, 245);
            margin-bottom: 10px;
        }

        .table td {
            border-top: none !important;
        }

        .table tr td:first-child {
            border-top-left-radius: 7px;
            border-bottom-left-radius: 7px;
        }

        .table tr td:last-child {
            border-top-right-radius: 7px;
            border-bottom-right-radius: 7px;
        }

        .table tr th:first-child {
            border-top-left-radius: 7px;
            border-bottom-left-radius: 7px;
        }

        .table tr th:last-child {
            border-top-right-radius: 7px;
            border-bottom-right-radius: 7px;
        }

        .myText p {
            margin-top: 20px;
            font-size: 15px;
            font-weight:bolder;
        }

        
        .ta {
            text-align: center;
        }
        .amount{
          font-weight: bold;
          align-items: center;
        }
        .date-des {
            align-items: left !important;
        }
        .name-align {
            text-align: left !important;
        }
        .name-statement{
            font-weight: bold;
        }
        .date-des-col{
            margin: 0 , 9px , 0 ,9px !important;
        }

    </style>
</head>
<body style="font-family: 'Roboto'">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
     
<div class="header">
    <img class="logo" src="logo.png" alt="logo"/>
    <div class="heading">
        <p class="title">Statement</p>
        <p class="date"><%= result.DateRange %></p>
    </div>
</div>
<div class="card-table">
    <div><i class="far fa-user icon"></i> <span class="prfile_name name-statement"><%= result.Name %></span></div>
    <table class="table" id="pdfData">
        <thead>
        <tr>
            <td class="date-des-col name-align" style="color:white;font-size:12px; background: linear-gradient(to bottom,rgba(52, 157, 255, 1), rgb(19, 79, 134));">Date</td>
            <td class="date-des-col name-align" style="color:white;font-size:12px; background: linear-gradient(to bottom,rgba(52, 157, 255, 1), rgb(19, 79, 134));">Description</td>
            <td style="color:white;font-size:12px; background: linear-gradient(to bottom,rgba(52, 157, 255, 1), rgb(19, 79, 134));">Points</td>
            <td style="color:white;font-size:12px; background: linear-gradient(to bottom,rgba(52, 157, 255, 1), rgb(19, 79, 134));">Points Balance</td>
            <td class="ta" style="color:white;font-size:12px; background: linear-gradient(to bottom,rgba(52, 157, 255, 1), rgb(19, 79, 134));">Transaction Amount</td>
            <td style="color:white;font-size:12px; background: linear-gradient(to bottom,rgba(52, 157, 255, 1), rgb(19, 79, 134));">Cash Balance</td>
        </tr>
        </thead>
        <tbody>
        <% if (result && result.StatementDetail.length > 0) { %>
            <% result.StatementDetail.forEach(item => { %>
                <tr>
                    <td class="name-align date-des-col" ><%= item.Date %></td>
                    <td  class="name-align date-des-col"><%= item.Description %></td>
                    <td style="text-align:center "><%= item.Points %></td>
                    <td style="text-align:center "><%= item.PointsBal %></td>
                    <td class="ta amount">
                        <span><%= item.TransAmount %></span>
                    </td>
                    <td class="amount"><%= item.CashBal %></td>
                </tr>
            <% }); %>
        <% } %>
        </tbody>
    </table>
</div>
<div class="card-">
    <div class="myText">
        <p style="margin-bottom: -13px;">Your family & Friends-1st Circle
            <span style="color:#ef7d00;font-size:15px">(<%= result.CircleCount1 %>)</span>
        </p>
        <p>Their Friends-Your 2nd Circle thru to 12th circle
            <span style="color: #ef7d00;font-size:15px">(<%= result.CircleCount2_12 %>)</span>
        </p>
        <table class="table">
            <thead>
            <tr>
                <td  style="color:white;font-size:12px; text-align:left; background: linear-gradient(to bottom,rgba(52, 157, 255, 1), rgb(19, 79, 134)) ;">Name</td>
                <td style="color:white;font-size:12px; background: linear-gradient(to bottom,rgba(52, 157, 255, 1), rgb(19, 79, 134));">Joined</td>
                <td style="color:white;font-size:12px; background: linear-gradient(to bottom,rgba(52, 157, 255, 1), rgb(19, 79, 134));">Their First Circle</td>
            </tr>
            </thead>
            <tbody>
            <% if (result && result.CoFDetail.length > 0) { %>
                <% result.CoFDetail.forEach(item => { %>
                <tr >
                    <td class="bold name-align"><%= item.Name %></td>
                    <td style="text-align:center"><%= item.Joined %></td>
                    <td style="text-align:center"> <%= item.Circle %></td>
                </tr>
                <% }); %>
            <% } %>
            </tbody>
        </table>
    </div>
</div>
</div>
</div>
</div>>
</body>
</html>

